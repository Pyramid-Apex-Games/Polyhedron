{
  "env": {
    "myDefaultIncludePath": [
      "${workspaceFolder}",
      "${workspaceFolder}/src",
      "${workspaceFolder}/src/shared",
      "${workspaceFolder}/src/game",
      "${workspaceFolder}/src/engine",
      "${workspaceFolder}/src/tools"
    ],
    "myCompilerPath": "/usr/local/bin/gcc-7"
  },
  "configurations": [
    {
      "name": "Mac - Debug",
      "intelliSenseMode": "clang-x64",
      "includePath": [
        "${myDefaultIncludePath}"
      ],
      "macFrameworkPath": [
        "/System/Library/Frameworks"
      ],
      "defines": [
        "DEBUG"
      ],
      "forcedInclude": [
        "${workspaceFolder}/include"
      ],
      "compilerPath": "/usr/bin/clang",
      "cStandard": "c11",
      "cppStandard": "c++17",
      "compileCommands": "${workspaceFolder}/.vscode/compile_commands.json",
      "browse": {
          "path": [
            "${workspaceFolder}"
          ],
          "limitSymbolsToIncludedHeaders": true,
          "databaseFilename": ""
      }
    },
    {
      "name": "Linux - Debug",
      "intelliSenseMode": "clang-x64",
      "includePath": [
        "${myDefaultIncludePath}"
      ],
      "defines": [
        "DEBUG"
      ],
      "forcedInclude": [
        "${workspaceFolder}/include/core.h"
      ],
      "compilerPath": "/usr/bin/clang",
      "cStandard": "c11",
      "cppStandard": "c++17",
      "compileCommands": "${workspaceFolder}/../.vscode/compile_commands.json",
      "browse": {
        "path": [
          "${workspaceFolder}"
        ],
        "limitSymbolsToIncludedHeaders": true,
        "databaseFilename": ""
      }
    },
    {
      "name": "Win64 - Debug",
      "intelliSenseMode": "msvc-x64",
      "includePath": [
        "${myDefaultIncludePath}"
      ],
      "defines": [
        "DEBUG"
      ],
      "forcedInclude": [
        "${workspaceFolder}/include/core.h"
      ],
      "compilerPath": "",
      "cStandard": "c11",
      "cppStandard": "c++17",
      "compileCommands": "${workspaceFolder}/../.vscode/compile_commands.json",
      "browse": {
          "path": [
            "${workspaceFolder}"
          ],
          "limitSymbolsToIncludedHeaders": true,
          "databaseFilename": ""
      }
    }
  ],
  "version": 4
}